# Настройки редактора кода
# На сайте https://editorconfig.org/#download
# можно найти дополнение для вашего редактора,
# если он ещё не поддерживает этот файл

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 200

[*.md]
trim_trailing_whitespace = false
