extends ../components/base/layout

block variables
  -
    title = 'Список страниц'
    hasFooter = false
    hasHeader = false
    const pages = [
      {
        name: 'UI-kit',
        src: 'ui-kit'
      },
      {
        name: 'Главная',
        src: 'index'
      },
      {
        name: 'Ошибка ',
        src: '404'
      },
    ]

block main
  style.
    .container {
      padding-top: 50px;
      padding-bottom: 50px;
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h1 {
      font-size: 24px;
      line-height: 28px;
      margin: 0 0 20px;
      font-weight: 400;
    }

    a {
      color: rgba(233, 242, 243, 0.6);
    }

    a:hover {
      color: rgba(233, 242, 243, 0.8);
      text-decoration: underline;
    }

    .wrapper {
      border-radius: 20px;
      padding: 20px;
      width: 500px;
      margin: auto;
      background: #7482FF;
    }

    ol {
      color: rgba(233, 242, 243, 0.6);
      list-style-type: decimal;
      margin: 0 0 0 20px;
    }

    li {
      font-size: 18px;
      line-height: 22px;
      margin-bottom: 7px;
    }

  main.container
    .wrapper
      h1 Список страниц
      ol
        each page in pages
          li
            a(href=`${page.src}.html`)= `${page.name} - ${page.src}.html`
