mixin img(data = {})
  - const path = data.path || '';
  - const name = data.name || '';
  - const format = data.format || 'jpg';

  if format === 'svg'
    img(
      src="img/" + path + "/" + name + "." + format,
      width= data.width,
      height= data.height
    )&attributes(attributes)
  else
    img(
      src="img/" + path + "/" + name + "." + format,
      srcset= "img/" + path + "/" + name + "@2x." + format + " 2x",
      width= width,
      height= height,
      alt= altText
    )&attributes(attributes)
