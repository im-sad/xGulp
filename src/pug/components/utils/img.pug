mixin img(data = {})
  - const path = data.path || '';
  - const name = data.name || '';
  - const format = data.format || 'jpg';

  if format === 'svg'
    img(
    src=`img/${path}/${name}.svg`,
      width= data.width,
      height= data.height
    )&attributes(attributes)
  else
    img(
      src=`img/${path}/${name}.${format}`,
      srcset= `img/${path}/${name}@2x.${format} 2x`,
      width= data.width,
      height= data.height,
      alt= data.alt ? data.alt : ''
    )&attributes(attributes)
