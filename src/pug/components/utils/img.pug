mixin img(data = {})
  - const path = data.path || '';
  - const name = data.name || '';
  - const format = data.format || 'jpg';

  if format === 'svg'
    img(
    src=`img/${path}/${name}.svg`,
      width= data.width,
      height= data.height
    )&attributes(attributes)
  else
    img(
      src= name ? `img/${path}/${name}.${format}` : '',
      srcset= name ? `img/${path}/${name}@2x.${format} 2x` : false,
      width= data.width,
      height= data.height,
      alt= data.alt ? data.alt : '',
      loading=data.lazy ? 'lazy' : false
    )&attributes(attributes)
