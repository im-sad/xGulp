mixin btn(options = {})

  - const tag = options.href ? 'a' : 'button';
  - const href = options.href || false;
  - const target = options.isExternal ? '_blank' : false;
  - const rel = options.isExternal ? 'nofollow noopener noreferrer' : false;
  - const type = options.type || tag === 'button' ? options.type || 'button' : false;

  - const size = options.size ? options.variant ? `btn-${options.variant}--size-${options.size}` : `btn--size-${options.size}` : false;
  - const variant = options.variant ? `btn-${options.variant}` : false;
  - const mod = options.mod ? `btn--${options.mod}` : false;


  #{tag}.btn(
    href=href,
    target=target,
    rel=rel,
    type=type,
    class=size,
    class=variant,
    class=mod
  )&attributes(attributes)
    block
